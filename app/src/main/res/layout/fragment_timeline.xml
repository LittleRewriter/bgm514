<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/TimeTable"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/week_1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:text="@string/monday" />

        <Button
            android:id="@+id/week_2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:text="@string/tuesday" />

        <Button
            android:id="@+id/week_3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:text="@string/wednesday" />

        <Button
            android:id="@+id/week_4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:text="@string/thursday" />

        <Button
            android:id="@+id/week_5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:text="@string/friday" />

        <Button
            android:id="@+id/week_6"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:text="@string/saturday" />

        <Button
            android:id="@+id/week_7"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:paddingLeft="3dp"
            android:paddingTop="8dp"
            android:paddingRight="3dp"
            android:paddingBottom="8dp"
            android:text="@string/sunday" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timelineRecycleView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TimeTable"
        tools:layout_editor_absoluteX="183dp" />

</androidx.constraintlayout.widget.ConstraintLayout>